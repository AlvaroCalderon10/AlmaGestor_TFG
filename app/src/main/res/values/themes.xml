<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AlmaGestor" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowContentTransitions">true</item>
    </style>



    <style name="digibuttom" parent="commonbuttom">

        <item name="backgroundTint">@color/white</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="commonbuttom" parent="Widget.MaterialComponents.ExtendedFloatingActionButton">

            <item name="android:layout_width">82dp</item>
            <item name="android:layout_height">82dp</item>
            <item name="cornerRadius">36dp</item>
            <item name="android:textSize">28dp</item>
            <item name="android:layout_margin">5dp</item>
    </style>
    <style name="auxbotom" parent="Widget.MaterialComponents.ExtendedFloatingActionButton">
        <item name="android:layout_width">92dp</item>
        <item name="android:layout_height">52dp</item>
        <item name="cornerRadius">20dp</item>
        <item name="backgroundTint">@color/white</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:gravity">center</item>
</style>
</resources>